@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category Master</h1>
<table>
    <tr>
        <a asp-controller="Category" asp-action="Create">Create New Category</a>
    </tr>
</table>


<table style="width:500px;" border=1>
    <tr>
        <td style="width:200px;">Category Name</td> 
        <td style="width:200px;">Display Name</td>
    </tr>
    @foreach(var  obj in Model)
    {
      <tr>
        <td style="width:200px;">@obj.name</td>
        <td style="width:200px;">@obj.Displayorder</td>
        <td>
            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.id">Edit</a>
            <a asp-controller="Category" onsubmit="return confirm('Are you sure?');" asp-action="Delete" asp-route-id="@obj.id">Delete</a>
            
        </td>
    </tr> 
    
    }
</table>

